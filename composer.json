{
    "name": "islandora/crayfish-commons",
    "description": "Shared code amongst Islandora Crayfish microservices",
    "type": "symfony-bundle",
    "require": {
        "islandora/chullo": "^1",
        "psr/log": "^1.0.1",
        "namshi/jose": "^7.2",
        "symfony/monolog-bundle": "^3.4",
        "symfony/http-foundation": "^4.3",
        "symfony/config": "^4.3",
        "symfony/dependency-injection": "^4.3",
        "symfony/event-dispatcher": "^4.3",
        "symfony/yaml": "^4.3",
        "symfony/security-bundle": "^4.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "sebastian/phpcpd": "^6.0",
        "mikey179/vfsstream": "^1.6",
        "symfony/phpunit-bridge": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Islandora\\Crayfish\\Commons\\": ""
        }
    },
    "scripts": {
        "check": [
            "./vendor/bin/phpcs --standard=PSR2 --extensions=php --ignore=\"vendor/\" .",
            "./vendor/bin/phpcpd --names *.php ."
        ],
        "test": [
            "@check",
            "php ./vendor/bin/simple-phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Islandora Foundation",
            "email": "community@islandora.ca",
            "role": "Owner"
        },
        {
            "name": "Daniel Lamb",
            "email": "dlamb@islandora.ca",
            "role": "Maintainer"
        }
    ]
}
