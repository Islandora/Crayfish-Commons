{
    "name": "islandora/crayfish-commons",
    "description": "Shared code amongst Islandora Crayfish microservices",
    "type": "symfony-bundle",
    "require": {
        "islandora/chullo": "dev-dev",
        "psr/log": "^1.0.1",
        "namshi/jose": "^7.2",
        "symfony/monolog-bundle": "^3.4",
        "symfony/http-foundation": "^4.3",
        "symfony/config": "^4.3",
        "symfony/dependency-injection": "^4.3",
        "symfony/event-dispatcher": "^4.3",
        "symfony/yaml": "^4.3",
        "symfony/security-bundle": "^4.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.0",
        "sebastian/phpcpd": "^3.0",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Islandora\\Crayfish\\Commons\\": ""
        }
    },
    "scripts": {
        "check": [
            "phpcs --standard=PSR2 src tests",
            "phpcpd --names *.php src tests"
        ],
        "test": [
            "@check",
            "phpunit"
        ]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Islandora Foundation",
            "email": "community@islandora.ca",
            "role": "Owner"
        },
        {
            "name": "Daniel Lamb",
            "email": "dlamb@islandora.ca",
            "role": "Maintainer"
        }
    ]
}
